class Solution {
public:
    int ans = INT_MIN;
    int dfs(TreeNode* root) {
        if (root == nullptr) // 遍历到null节点，收益0
            return 0;
        int left = dfs(root->left), right = dfs(root->right); // 左右子树提供的最大路径和

        int inSum = root->val + left + right; // 当前子树内部的最大路径和
        ans = max(ans, inSum); // 挑战最大纪录
        int outSum = root->val + max(0, max(left, right));  // 当前子树对外提供的最大和
        return max(outSum, 0);
    }
    int maxPathSum(TreeNode* root) {
        dfs(root);
        return ans;
    }
};
